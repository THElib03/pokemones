{% extends 'base.html.twig' %}

{% block title %}Pokédex Entry - {{ pokedex.name }}{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>{{ pokedex.name }}</h1>

        <table class="pokedex-table">
            <tbody>
                <tr>
                    <th>National №</th>
                    <td>#{{ pokedex.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ pokedex.name }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>
                        {% for type in pokedex.type %}
                            <span class="type-badge" style="background-color: {{ random(['#FF0000', '#00FF00', '#0000FF', '#FFFF00']) }}">
                                {{ type }}
                            </span>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <div class="pokemon-image-container">
                            <img src="{{ asset('uploads/images/' ~ pokedex.image) }}" 
                                 alt="{{ pokedex.name }}" 
                                 class="pokemon-image">
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        <div style="margin-top: 30px;">
            <a href="{{ path('app_pokedex_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Pokédex
            </a>

            <a href="{{ path('app_pokedex_edit', {'id': pokedex.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>

            {{ include('pokedex/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}