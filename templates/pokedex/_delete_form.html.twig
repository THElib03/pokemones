<form method="post" action="{{ path('app_pokedex_delete', {'id': pokedex.id}) }}" onsubmit="return confirm('Are you sure you want to release this Pokémon?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pokedex.id) }}">
    <button class="btn btn-danger" style="margin-top: 20px;">
        <i class="fas fa-trash"></i> Release Pokémon
    </button>
</form>