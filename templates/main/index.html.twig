{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	{% if app.user %}
	<a href="{{ path('app_logout') }}">Logout</a> <br/>
		<h1>Hello {{ app.user.username }}</h1>
		{% if 'ROLE_ADMIN' in app.user.roles %}

			<a href="{{ path('app_pokedex_index') }}">Pokedex</a> <br/>

		{% endif %}
		
		<a href="{{ path('app_pokemon_colection') }}">Tus Pokemons</a>
	{% else %}
		<a href="{{path('app_login')}}">Login</a>
	{% endif %}
{% endblock %}
